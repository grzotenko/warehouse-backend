<div>Stores list</div>

<br>

<% if @stores.empty? %>
  <p>Список магазинов пуст</p>
<% else %>

  <table class="table col-7">
    <thead>
      <tr>
        <th scope="col-4">Title</th>
      </tr>
    </thead>
    <tbody>

    <% @stores.each do |st| %>

      <tr>
        <th scope="row"><%= st.title %></th>
      </tr>

    <% end %>

    </tbody>
  </table>

  <br>

  <%= paginate @stores, theme: 'twitter-bootstrap-4'%>
<% end %>