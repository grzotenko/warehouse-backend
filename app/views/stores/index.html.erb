<div>Stores list</div>

<% if @stores.empty? %>
  <p>Список магазинов пуст</p>
<% else %>

  <table class="table col-7">
    <thead>
      <tr>
        <th scope="col-4">Title</th>
      </tr>
    </thead>
    <tbody>

    <% paginate @stores.each do |st| %>

      <tr>
        <th scope="row"><%= st.title %></th>
      </tr>

    <% end %>

    </tbody>
  </table>
<% end %>